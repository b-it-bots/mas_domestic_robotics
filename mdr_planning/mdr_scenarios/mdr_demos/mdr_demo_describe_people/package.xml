<?xml version="1.0"?>
<package>
  <name>mdr_demo_describe_people</name>
  <version>1.0.0</version>
  <description>A package for a scenario in which a robot describes the people that are in its field of view by their visual characteristics (gender, emotion)</description>
  <license>GPLv3</license>

  <author email="aleksandar.mitrevski@h-brs.de">Alex Mitrevski</author>
  <maintainer email="robotics@inf.h-brs.de">MAS robotics</maintainer>

  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>rospy</build_depend>
  <build_depend>roslint</build_depend>
  <build_depend>smach</build_depend>
  <build_depend>smach_ros</build_depend>
  <build_depend>actionlib</build_depend>

  <build_depend>mas_execution_manager</build_depend>
  <build_depend>mdr_detect_person</build_depend>
  <build_depend>mdr_gender_recognition</build_depend>
  <build_depend>mdr_recognize_emotion_action</build_depend>

  <run_depend>rospy</run_depend>
  <run_depend>roslint</run_depend>
  <run_depend>smach</run_depend>
  <run_depend>smach_ros</run_depend>
  <run_depend>actionlib</run_depend>

  <run_depend>mas_execution_manager</run_depend>
  <run_depend>mdr_detect_person</run_depend>
  <run_depend>mdr_gender_recognition</run_depend>
  <run_depend>mdr_recognize_emotion_action</run_depend>

  <test_depend>roslaunch</test_depend>
</package>
